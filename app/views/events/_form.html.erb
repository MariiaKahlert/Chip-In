<%= simple_form_for [@event] do |f| %>
<%= f.input :name %>
<%= f.input :category, collection: CATEGORIES %>
<%= f.input :description %>
<%= f.input :address %>
<%= f.input :starts_at, order: [:day, :month, :year] %>
<%= f.input :ends_at, order: [:day, :month, :year] %>
<%= f.input :capacity %>
<%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
