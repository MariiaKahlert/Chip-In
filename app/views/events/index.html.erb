<div class="d-flex">
  <div class="container w-50">
    <% if @events %>
    <div class="row">
      <% @events.each do |event| %>
      <% if event.starts_at > Date.today %>
      <div class="card m-4 col-xl-5 col-lg-10 text-center">
        <p><%= cl_image_tag event.photo.key %></p>
        <h2><%= link_to(event.name, event_path(event)) %></h2>
        <p>Host: <%= link_to(event.user.username, user_path(event.user)) %></p>
        <h5>Cause: <%= event.category %></h5>
        <p>Starts at: <%= event.starts_at_formatted %></p>
        <p>Ends at: <%= event.ends_at_formatted %></p>
        <p><%= event.capacity - event.requests.length %> spots left</p>
      </div>
      <% end %>
      <% end %>
    </div>
    <% end %>
  </div>


  <div id="map" class="w-50"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>

