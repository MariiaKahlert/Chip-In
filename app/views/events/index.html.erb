<div>
  <% if @events %>
    <p><% @events.each do |event| %>
      <h2><%= link_to(event.name, event_path(event)) %></h2>
      <h4><%= event.user.username %></h4>
      <h5><%= event.description %></h5>
      <h5>Starts at: <%= event.starts_at_formatted %></h5>
      <h5>Ends at: <%= event.ends_at_formatted %></h5>
      <p><%= cl_image_tag event.photo.key %></p>
      <% end %>
    </p>
  <% end %>

  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

</div>


