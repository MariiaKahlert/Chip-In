<div class="container" id="show-page-content">
  <div class="content-show d-flex flex-column">
    <div class="border-bottom d-flex align-items-center justify-content-between p-4">
      <div class="d-flex align-items-center justify-content-between">
        <%= cl_image_tag @event.user.photo.key, width: "70px", class: "mr-2" %>
        <h5><%= link_to(@event.user.username, user_path(@event.user), class: "user-link") %></h5>
      </div>
      <p><%= @event.capacity - @event.requests.length %> spots left!</p>
    </div>
    <div class="row">
      <div class="image-container col-lg-4 col-sm-12">
          <%= cl_image_tag @event.photo.key, width: "300px" %>
      </div>
      <div class="col-lg-8 col-sm-12 py-8">
        <div>
          <div class="p-4">
            <h2 class=""><%= @event.name %></h2>
            <p><%= @event.description %></p>
            <div class="address-margin d-flex align-items-center justify-content-start">
              <i class="fas fa-map-marker-alt mr-2"></i>
              <p><%= @event.address %></p>
            </div>
            <% if @event.requests.present? %>
              <div class="participants-number d-flex align-items-center justify-content-start p-2">
                <% @event.requests.sample(2).each do |request|%>
                  <%= cl_image_tag request.user.photo.key, class: "avatar", title: request.user.username%>
                <% end %>
                <% if @event.requests.length > 2 %>
                  <div class="ml-2">
                    <p> + <strong><%= @event.requests.length - 2 %></strong> more </p>
                  </div>
                <% end %>
              </div>
            <% end %>
            <p><strong>From:</strong> <%= @event.starts_at_formatted %></p>
            <p><strong>To:</strong> <%= @event.ends_at_formatted %></p>
            <%= link_to "Participate", new_event_request_path(@event), class: 'button-chip-main' %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div
  id="map"
  style="width: 100%;
  height: 400px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>


