<section class="banner">
  <div class="container py-5">
    <h1>Chip In</h1>
    <%= simple_form_for :search, method: :get, url: events_path do |f|%>
    <%= f.input :query, label: false, placeholder: "Search" %>
    <%= f.submit "Submit", as: :hidden, class: "d-none" %>
    <!-- <%= f.submit "Submit", class: "btn btn-primary" %> -->
    <% end %>
  </div>
</section>

<section class="section">
  <div class="container py-5">
    <h2>Featured events</h2>
    <div class="">
      <div class="row justify-content-center">
        <% @events.sample(3).each do |event| %>
          <% if event.starts_at > Date.today %>
            <div class="card-chip col-lg-3 col-sm-12 p-0 m-4">
                <p class="mb-0"><%= cl_image_tag event.photo.key %></p>
              <div class="event-content p-3">
                <h2><%= link_to(event.name, event_path(event)) %></h2>
                <p>Host: <%= link_to(event.user.username, user_path(event.user),target: :_blank) %></p>
                <h5>Cause: <%= event.category %></h5>
                <p>Date: <%= event.starts_at_formatted %></p>
                <p class="mb-0 p-1"><%= event.capacity - event.requests.length %> spots left</p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>

