<section class="banner">
  <div class="container py-5">
    <h1>Chip In</h1>
    <p>Find volunteering experiences near you</p>
    <div class="homepage-search">
      <%= simple_form_for :search, method: :get, url: events_path do |f|%>
      <%= f.input :query, label: false, placeholder: "Search (e.g. Berlin, poverty...)" %>
      <%= f.submit "Submit", as: :hidden, class: "d-none" %>
      <%= f.submit "Submit", class: "button-chip-main" %>
      <% end %>
    </div>
  </div>
</section>

<section class="section">
  <div class="container py-5">
    <h2 class="chip-purple">Featured events</h2>
    <div class="">
      <div class="row h-100 justify-content-center">
        <% @events.sample(3).each do |event| %>
          <% if event.starts_at > Date.today %>
            <div class="col-lg-3 col-sm-12 p-0 m-4">
              <div class="card-chip">
                <div class="event-content d-flex flex-column h-100">
                  <div class="card-chip-image">
                    <%= cl_image_tag event.photo.key, class: "mb-0" %>
                  </div>
                  <div class="p-3 d-flex flex-column h-100">
                    <div class="card-chip-title">
                      <h3 class="mb-0"><%= link_to(event.name, event_path(event), class: "event-link") %></h3>
                    </div>
                    <div class="d-flex flex-column justify-content-between h-100">
                      <div class="card-chip-description">
                        <p>Host: <%= link_to(event.user.username, user_path(event.user), class: "user-link", target: :_blank) %></p>
                        <p>Cause: <%= event.category %></p>
                        <p>Date: <%= event.starts_at_formatted %> to <%= event.ends_at_time %></p>
                      </div>
                      <div class="card-chip-spots">
                        <p class="mb-0 p-1"><%= event.capacity - event.requests.length %> spots left</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section class="section" id="section-two">
