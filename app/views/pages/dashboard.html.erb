<div class="container">
  <% if @user.role == "Volunteer"%>

    <div class="future-events">
      <section class="section">
        <div class="container py-5">
          <h1>Upcoming events:</h1>
          <div class="">
            <div class="row justify-content-center">
              <% if @future_requests %>
                <% @future_requests.each do |request| %>
                  <% event = request.event %>
                <div class="card-chip m-4 col-xl-3 col-lg-3 p-0 text-center">
                  <p class="mb-0"><%= cl_image_tag event.photo.key %></p>
                  <div class="event-content p-3">
                    <h2><%= link_to(event.name, event_path(event)) %></h2>
                    <p>Host: <%= link_to(event.user.username, user_path(event.user)) %></p>
                    <h5>Cause: <%= event.category %></h5>
                    <p>Starts at: <%= event.starts_at_formatted %></p>
                    <p>Ends at: <%= event.ends_at_formatted %></p>
                    <p>Status :<%= request.status %></p>
                  </div>
                </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </section>
  </div>

  <hr>

  <div class="past-events">
    <section class="section">
      <div class="container py-5">
        <h1>Past events:</h1>
        <div class="">
          <div class="row justify-content-center">
            <% if @past_requests %>
              <% @past_requests.each do |request| %>
                <% event = request.event %>
              <div class="card-chip m-4 col-xl-3 col-lg-3 p-0 text-center">
                <p class="mb-0"><%= cl_image_tag event.photo.key %></p>
                <div class="event-content p-3">
                  <h2><%= link_to(event.name, event_path(event)) %></h2>
                  <p>Host: <%= link_to(event.user.username, user_path(event.user)) %></p>
                  <h5><%= event.description %></h5>
                  <p>Starts at: <%= event.starts_at_formatted %></p>
                  <p>Ends at: <%= event.ends_at_formatted %></p>
                </div>
              </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </section>
</div>












  <% else %>

    <h1>Events:</h1>
    <% if @events %>
      <% @events.each do |event| %>
        <h2><%= event.name %></h2>
        <p>(FROM <%= event.starts_at_formatted%> TO <%= event.ends_at_formatted%>)</p>
        <% event.requests.each do |request| %>
          <p>Request sent by: <%= link_to(request.user.full_name, user_path(request.user)) %></p>
        <% end %>
      <% end %>
    <% end %>

  <% end %>
</div>
